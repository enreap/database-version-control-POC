<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">

    <!-- Create db1 and user -->
    <changeSet id="001-create-pocdb" author="dev">
        <sql>
            CREATE DATABASE IF NOT EXISTS pocdb;
            CREATE USER IF NOT EXISTS 'pocuser'@'ip-172-31-41-46.ec2.internal' IDENTIFIED BY 'Db1@12345';
            <!-- GRANT ALL PRIVILEGES ON pocdb.* TO 'pocuser'@'ip-172-31-41-46.ec2.internal'; -->
            GRANT ALL PRIVILEGES ON *.* TO 'pocuser'@'ip-172-31-41-46.ec2.internal' WITH GRANT OPTION;

            <!-- CREATE USER IF NOT EXISTS 'pocuser'@'localhost' IDENTIFIED BY 'Db1@12345';
            GRANT ALL PRIVILEGES ON pocdb.* TO 'pocuser'@'localhost'; -->

            FLUSH PRIVILEGES;
        </sql>
        <rollback>
            DROP USER IF EXISTS 'pocuser'@'localhost';
            DROP DATABASE IF EXISTS pocdb;
        </rollback>
    </changeSet>


        <changeSet id="001-create-pocdb1" author="dev">
        <sql>
            CREATE DATABASE IF NOT EXISTS pocdb1;
            CREATE USER IF NOT EXISTS 'pocuser1'@'ip-172-31-41-46.ec2.internal' IDENTIFIED BY 'Db1@12345';
            <!-- GRANT ALL PRIVILEGES ON pocdb1.* TO 'pocuser1'@'ip-172-31-41-46.ec2.internal'; -->
            GRANT ALL PRIVILEGES ON *.* TO 'pocuser1'@'ip-172-31-41-46.ec2.internal' WITH GRANT OPTION;

           <!-- CREATE USER IF NOT EXISTS 'pocuser1'@'localhost' IDENTIFIED BY 'Db1@12345';
            GRANT ALL PRIVILEGES ON pocdb1.* TO 'pocuser1'@'localhost';  -->

            FLUSH PRIVILEGES;
        </sql>
        <rollback>
            DROP USER IF EXISTS 'pocuser1'@'localhost';
            DROP DATABASE IF EXISTS pocdb1;
        </rollback>
    </changeSet>

    <!-- Create db2 and user -->
    <changeSet id="002-create-database2" author="dev">
        <sql>
            CREATE DATABASE IF NOT EXISTS database2;
            CREATE USER IF NOT EXISTS 'database2'@'%' IDENTIFIED BY 'Db2@12345';
            GRANT ALL PRIVILEGES ON database2.* TO 'database2'@'%';
            FLUSH PRIVILEGES;
        </sql>
        <rollback>
            DROP USER IF EXISTS 'database2'@'%';
            DROP DATABASE IF EXISTS database2;
        </rollback>
    </changeSet>

